.toolbar
    align-items: center
    color: #FFF
    display: flex

    .buttons
        .button
            border-radius: 3px
            cursor: pointer
            display: inline-block
            margin: 10px 15px
            opacity: 0.65
            transition: opacity 0.25s

            &.active
                background-color: rgba(225,225,225,0.15);

            &.active
            &:hover
                opacity: 1

            &.update
                i:before
                    background-color: var(--Main-color)
                    border-radius: 5px
                    content: ''
                    display: block
                    height: 8px
                    position: absolute
                    right: -2px
                    top: -2px
                    width: 8px
                    z-index: 99

            i
                font-size 22px
                height: 22px
                line-height: 22px
                padding: 5px;
                position: relative
                width: 22px
