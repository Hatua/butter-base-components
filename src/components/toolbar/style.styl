.toolbar
    display:  flex
    align-items: center
    color: #FFF

    .buttons
        .button
            border-radius: 3px
            cursor: pointer
            display: inline-block
            margin: 10px
            opacity: 0.65
            transition: all 0.3s ease

            &.active
            &:hover
                background-color: rgba(225,225,225,0.15);
                opacity: 1

            &.update
                i:before
                    position: absolute
                    top: -2px
                    right: -2px
                    background-color: var(--Main-color)
                    border-radius: 5px
                    z-index: 99
                    content: ''
                    height: 8px
                    width: 8px
                    display: block

            i
                position: relative
                line-height: 22px
                font-size 22px
                width: 22px
                height: 22px
                padding: 5px;
