.search
    background: var(--Input-bg)
    border: var(--Input-border)
    background-clip: border-box
    border-radius: var(--Input-radius)
    box-shadow: var(--Input-shadow)
    display: inline-block
    padding: 5px 10px
    vertical-align: middle

    input
        background: 0
        border: 0
        box-shadow: none
        color: #FFF
        outline: 0
        font-weight: normal
        font-size:  0.95em
        padding: 0
        width: 150px

    input, i
        display: inline-block
        vertical-align: middle
    i
        font-size: 22px
        height: 22px
        opacity: 0.5
