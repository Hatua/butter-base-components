.settings-dropdown
    composes: dropdown from "../dropdown/module.css";

.menu
    &::-webkit-scrollbar
        width 5px

    &::-webkit-scrollbar-track
        background-color #DDD
        border-radius 2px

    &::-webkit-scrollbar-thumb
        background-color $ScrollBarThumb
        border-radius 2px
        &:hover
            background-color: $ScrollBarThumbHover
