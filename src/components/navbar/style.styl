.backButton {
    opacity: 0.75;
    cursor: pointer;
    transition: opacity 0.25s;
    font-size: 3vw;
    font-family: var(--Font-title);
    font-weight: bolder;
    font-variant: all-petite-caps;
    padding-right: 4vw;

    i {
        position: relative;
        top: 0.7vw;
        font-size: 3vw;
        font-variant: common-ligatures;
    }
}

.navbar
    position: absolute
    background-color: var(--Navbar-bg)
    box-shadow: 0 3px 5px -5px rgba(0, 0, 0, 15)
    align-items: center
    display: flex
    justify-content: space-between
    height: var(--Navbar-height)
    overflow: hidden
    user-select: none
    width: 100%
    z-index: 20

    & > *
        flex: 0
        white-space: nowrap

    & > *[role=navbar-center]
        flex: none

    & > *[role=navbar-left]
        display: flex
        justify-content: flex-end

    .menu
        display: flex
        align-items: center
        justify-content: flex-start
        margin: 0 15px

        .title, .button
            font-size: 20px
            margin-right: 15px

        .title
            font-family: var(--Font-title)
            font-weight: bold
            text-transform: uppercase



