.action-bar
    color: #FFF
    .buttons
        .button
            display: inline-block
            vertical-align: middle
            margin: 10px
            cursor: pointer
            transition: opacity 0.3s ease
            opacity: 0.75
            &.active
            &:hover
                opacity: 1
            i
                display: block
                font-size 24px
                width: 24px
                padding: 0
                margin: 0
                height: 24px
