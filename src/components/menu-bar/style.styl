.menu
    background-color: var(--Navbar-bg)
    box-shadow: var(--Navbar-shadow)
    height: (--Navbar-height)
    line-height: (--Navbar-height)
    padding: 0 10px
    user-select: none
    width: auto
    z-index: 10
    display: flex
    align-items: center
    justify-content: end

    & *
        vertical-align: middle
