.switch
    position: relative
    display: inline-block
    width: 36px
    height: 20px

    .slider
        position: absolute
        cursor: pointer
        top: 0
        left: 0
        right: 0
        bottom: 0
        border-radius: 34px
        background-color: rgba(250,250,250, 0.25)
        -webkit-transition: .3s

        &:before
            position: absolute
            content: ""
            height: 16px
            width: 16px
            left: 2px
            bottom: 2px
            background-color: white
            border-radius: 50%
            -webkit-transition: .3s

    input
        display:none

        &:checked + .slider
            background-color: $MainColor

        &:focus + .slider
            box-shadow: 0 0 1px rgba(0,0,0,0.5)

        &:checked + .slider:before
            -webkit-transform: translateX(16px)
