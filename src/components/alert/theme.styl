.success
    background: #33AA65
    padding: 10px 30px
    border-radius: 30px
    z-index: 999
    position fixed
    bottom 25px
    right 50px
    color $Text1
    font-family $MainFont, $AlternateFont
    font-size 16px
    i
        font-size 14px

    #checkmark-notify
        display inline-block
        width 20px
        height 20px
        transform rotate(45deg)

    #stem-notify
        position absolute
        width 3px
        height 12px
        background-color $Text1
        left 11px
        top 6px

    #kick-notify
        position absolute
        width 6px
        height 3px
        background-color $Text1
        left 6px
        top 15px
