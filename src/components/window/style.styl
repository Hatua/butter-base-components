.windowOuter
    background-color: var(--Window-bg)
    color: var(--Font-color)
    font-family: var(--Font-family)
    overlay(relative)
    overflow: hidden
    height: calc(100% - var(--Window-handler-height))
    width: 100%

    .windowInner
        width: 100%
        height: 100%
        background: var(--Window-bg)
        border: 1px solid #151515
        border-radius: 5px
        box-shadow: 0 6px 6px rgba(0,0,0,0.25);
        display: block
        position: relative
        padding: 0
        overflow-x: hidden
        overflow-y: auto
        scrollable()

.demoWindow
    margin: 75px auto
    width: 80%
    height: 80%

.sticky
  position: sticky