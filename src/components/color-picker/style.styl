.color-dropdown
    composes: dropdown from "../dropdown/module.css";

    div[class=dropdown-toggle]
        .selected
            background-color: #EEE;
            border: 2px solid rgba(0,0,0,0.5);
            border-radius: 50px;
            display: inline-block;
            height: 15px;
            width: 15px;
            margin:  0 15px 0 5px;
            vertical-align: middle;

    *[class*="dropdown-menu"]
        .button,
        .colors
            cursor: pointer
            padding: 8px 0px 8px 10px
        .button
            &:hover
                background: #EEE
        .colors
            li
                background-color: #EEE
                border: 2px solid rgba(0,0,0,0.5)
                border-radius: 5px
                display: inline-block
                height: 25px
                margin: 0 5px
                opacity: 1
                width: 25px
