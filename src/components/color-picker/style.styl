.dropdown
        position: relative
        z-index: 1
        color:  #FFF
        border-radius:  5px
        border: 0
        display: inline-block
        font-size  0.95em

        & div[class*=dropdown-backdrop]
            display none

        &[class*=open]
            z-index: 99
            background: #FFF
            color: #252525
            border-radius: 5px 5px 0 0

            .menu
                background: #FFF
                height: auto
                opacity: 1
                transform: translate(0, 29px)!important

.toggle
    display: flex
    justify-content: space-between
    align-items: center
    position relative
    z-index: 99
    align-items: center
    cursor: pointer
    font-family: var(--Font-title)
    text-align: center
    font-size: 16px
    padding: 4px 10px
    border-radius 5px
    color #FFF
    font-weight normal
    line-height 0.70em
    display: inline-block
    width: auto
    background: var(--Input-bg-color)
    -webkit-box-shadow: inset 0px 0px 1px 0px rgba(0,0,0,0.85)

    .selected
        background-color: #EEE
        border: 2px solid rgba(0,0,0,0.5)
        border-radius: 50px
        display: inline-block
        height: 15px
        width: 15px
        margin-right: 10px

        vertical-align: middle

    &[aria-expanded*=true]
        color: #252525
        background: transparent
        -webkit-box-shadow: none

        i:after
            content "arrow_drop_up"
            color: rgba(0, 0, 0, 0.65)

    span
        text-align: left
        min-width: 125px
        display: inline-block
        margin: 0
        padding: 0
        font-size: 0.9em
        line-height: 0.75em
        min-width: 150px
        text-transform: capitalize
    i
        margin:0!important
        opacity 0.65
        font-size 1em
        margin-left 10px
        &:after
            content: "arrow_drop_down"

.menu
    z-index: 1
    opacity: 0
    overflow-x: hidden
    overflow-y: auto
    width: 100%
    height:0
    max-height: 215px
    margin: 0
    padding: 2px 0 0 0
    border: 0
    border-radius: 0 0 5px 5px
    box-shadow: none
    display: inline-block
    vertical-align top
    color #252525
    position: absolute
    left 0
    top 0
    font-family: var(--Font-normal)
    transform: translate(0, -2px)!important
    -webkit-transition: transform 0.4s cubic-bezier(0.42, 0, 0, 1.4)

    .button,
    .colors
        cursor: pointer
        padding: 8px 0px 8px 10px

    .button
        &:hover
            background: #EEE

    .colors
        li
            background-color: #EEE
            border: 2px solid rgba(0,0,0,0.5)
            border-radius: 25px
            display: inline-block
            height: 25px
            margin: 0 5px
            width: 25px
