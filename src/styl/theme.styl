.settings
    z-index 1
    background-color $BackColor_dark
    height 100%
    width 100%
    position fixed
    padding-top: $TitleHeight + 10px
    #qrcode-modal
            height: 100vh
            width: 100vw
            background: $BackColor_dark
            position: absolute
            left: 0
            top: 0
            z-index: 200
            text-align: center
            canvas
                background: #FFF
                padding: 34px
                border-radius: 15px
                margin-top: 140px
            i
                position absolute
                top: 30px
                right: 30px
                color: #FFF
                font-size: 48px

    .settings-container
        z-index 1
        width 100%
        height 100%
        position absolute
        background-color $BackColor_dark
        -webkit-user-select none
        padding-bottom 20px
        top: 0
        &.show-advanced
            .settings-row
                &.advanced
                    padding 35px 20px !important
                    height: auto !important
                    opacity: 1 !important
                    overflow: visible !important
                    transform: scale(1) !important

        .navbar-s
            width: 100%
            margin: 0 auto
            text-align: center

        .nav-tabs
            width auto
            background: transparent
            margin 0 auto
            font-size: 0.9em
            border-bottom: none 0
            display: block
            width 100%
            position absolute
            padding-top 10px
            box-shadow: none
            li
                float: none
                display: inline-block
                a
                    margin 0
                    line-height 1
                    border-radius 0
                    padding 0
                    color #FFF
                &:hover, &.active
                    a
                        background transparent
                        border 0 none

        .tab-content
            scrollable()
            display: block
            width: 100%
            position: absolute
            top: 160px
            bottom: 0px
            .tab-pane
                .title
                    font-family: $TitleFont
                    color: #FFF
                    font-weight: 900
                    padding: 20px
                    text-align: center
                    opacity: .4
                section
                    display block
                    .content
                        max-width: 780px
                        margin: 0 auto

.settings-container-contain
    section
        display none
        &#title
            display: block
