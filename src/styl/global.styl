:global
    ul
        list-style: none
    .error
        background: #e74c3c
        color: #FFF
        padding: 5px 10px
        border-radius: 5px
        font-family: monospace
        font-weight: bolder
        color: #151515


    .fade-enter
        opacity: 0.01
        &.fade-enter-active
            opacity: 1
            transition: opacity 300ms ease-in

    .fade-leave
        opacity: 1
        &.fade-leave-active
            opacity: 0.01
            transition: opacity 300ms ease-out

    input
        &[type=text],
        &[type=number],
        &input[type=password]
            padding: 7px 10px
            border-radius 5px
            color #FFF
            outline 0
            border 0
            font-size  0.95em
            font-weight normal
            line-height 0.70em
            width 140px
            background var(--Input-bg-color)
            -webkit-box-shadow: inset 0px 0px 1px 0px rgba(0,0,0,0.85)
            transition background .2s ease
